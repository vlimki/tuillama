model = "llama3"
api_url = "http://localhost:11434/api/chat"
system_prompt = "You are a helpful assistant."

# in visual mode, the selected message will be typed out as bold instead of recoloring the background
bold_selection = false

[preview]
preview_fmt = "pdf"
preview_open = "zathura"

[options]
# e.g.:
# num_ctx = 4096
# num_thread = 6
# temperature = 0.7
# num_gpu = 50

# Names or #RRGGBB
[colors]
sidebar_title = "Green"
sidebar_timestamp = "DarkGray"
sidebar_item = "White"

title_chat = "Blue"
title_input = "Blue"

user_prefix = "Magenta"
assistant_prefix = "Magenta"
system_prefix = "Yellow"

heading1 = "Yellow"
heading2 = "LightYellow"
heading3 = "Cyan"
heading4 = "LightCyan"
blockquote_bar = "DarkGray"
list_bullet = "Green"
ordered_number = "Green"
inline_code = "Yellow"
inline_code_bg = "#080808"
code_block_fg = "#888888"
code_block_bg = "#080808"
hr = "#282828"

status_hint = "Gray"
mode_insert = "Green"
mode_normal = "Yellow"
mode_visual = "Magenta"
mode_focus = "Blue"

border_sidebar = "#484848"
border_chat = "#484848"
border_input = "#484848"

popup_title = "Red"
popup_accent = "Yellow"
popup_text = "Gray"

# Syntax highlighting
[syntax]
enabled = true
# If you prefer a built-in syntect theme (used only when no [syntax.custom] is provided)
theme_name = "base16-ocean.dark"

# Custom syntax palette (takes precedence over theme_name when present)
[syntax.custom]
keyword  = "#CC99CD"
string   = "#7EC699"
comment  = "#999999"
type     = "#5FB4B4"
function = "#6699CC"
number   = "#F2777A"
operator = "#F99157"
punct    = "light_gray"
text     = "white"
